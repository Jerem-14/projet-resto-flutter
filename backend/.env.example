# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration de la base de données PostgreSQL (Azure Neon)
DATABASE_URL=postgresql://username:password@ep-******.azure.neon.tech/flutter?sslmode=require

# Clés de sécurité
JWT_SECRET=votre_secret_jwt_super_securise_ici_changez_moi
JWT_EXPIRES_IN=24h

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration de l'upload de fichiers
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Configuration SSL pour production
SSL_MODE=require